        update t_user
        <if test="openId != null ">
            <if test="skey != null">
                set SKEY = #{skey}
                where #{openId} = WX_OPENID
            </if>
        </if>

    </update>

    <!--根据skey查询用户个人相关信息(前端个人中心页需要展示的信息:积分,余额(总余额),押金状态)-->
    <select id="findUserInfoBySkey" parameterType="String" resultType="java.util.HashMap"><!--返回类型为map时,resultType一定不要写成resultMap!!! -->
        <if test="skey != null">
            select
                t_user.POINT,
                t_account.ACCOUNT_BALANCE,
                t_account.DEPOSIT_STATUS
            from
                t_user,
                t_account
            where
                #{skey}=t_user.SKEY and t_account.UID= t_user.ID
        </if>
    </select>

    <!--根据skey查询用户个人钱包信息(前端我的钱包页需要展示的信息:充值余额,赠送余额)-->
    <select id="findUserWalletInfoBySkey" parameterType="String" resultType="java.util.HashMap"><!--返回类型为map时,resultType一定不要写成resultMap!!! -->
        <if test="skey != null">
            select
              t_account.RECHARGE_BALANCE,
              t_account.BALANCE_GIVED
            from
              t_user,
              t_account
            where
              #{skey}=t_user.SKEY and t_account.UID= t_user.ID
        </if>
    </select>


