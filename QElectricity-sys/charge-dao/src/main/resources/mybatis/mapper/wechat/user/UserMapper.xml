    <!-- 根据id更新skey-->
    <update id="updateSkeyById">
        update t_user
        <if test="Id != null ">
            <if test="skey != null">
                set SKEY = #{skey}
                where #{Id} = ID
            </if>
        </if>

    </update>

    <!-- 根据openId更新skey-->
